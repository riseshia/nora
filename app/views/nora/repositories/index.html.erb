<p id="notice"><%= notice %></p>

<h1>Nora Repositories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nora_repositories.each do |nora_repository| %>
      <tr>
        <td><%= nora_repository.name %></td>
        <td><%= nora_repository.url %></td>
        <td><%= link_to 'Show', nora_repository %></td>
        <td><%= link_to 'Edit', edit_nora_repository_path(nora_repository) %></td>
        <td><%= link_to 'Destroy', nora_repository, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Nora Repository', new_nora_repository_path %>
