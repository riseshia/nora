<h1>New Repository</h1>

<% if @repositories.present? %>
  <%= form_with url: repositories_path, data: { remote: false } do |f| %>
    <ul>
      <% @repositories.each do |repo| %>
        <li class="field">
          <div class="control">
            <label class="checkbox">
              <%= check_box_tag "names[]", repo.name, false, id: "names_#{sanitize_to_id(repo.name)}", multiple: true %>
              <%= repo.name %>
              <%= link_to "ref", repo.url %>
            </label>
          </div>
        </li>
      <% end %>
    </ul>

    <div class="field">
      <div class="control">
        <%= submit_tag "Import repositories", class: "button is-primary" %>
      </div>
    </div>
  <% end %>
<% else %>
  There is no watchable repository.
<% end %>

<%= link_to 'Back', repositories_path %>
